{
	// Use IntelliSense to learn about possible attributes.
	// Hover to view descriptions of existing attributes.
	// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
	"version": "0.2.0",
	"configurations": [
		{
			"name": "vulkanbox windows",
			"type": "cppvsdbg",
			"request": "launch",
			"program": "${workspaceFolder}/build/bin/vulkanbox.exe",
			"args": [
				"--validate"
			],
			"stopAtEntry": false,
			"cwd": "${workspaceFolder}/build/bin/",
			"environment": [],
			"console": "integratedTerminal",
			"preLaunchTask": "build"
		},
		{
			"name": "slangrc windows",
			"type": "cppvsdbg",
			"request": "launch",
			"program": "${workspaceFolder}/build/bin/slangrc.exe",
			"args": [
				"../res/shaders/default.slang",
				"bin/res/shaders/default.spv"
			],
			"stopAtEntry": false,
			"cwd": "${workspaceFolder}/build/",
			"environment": [],
			"console": "integratedTerminal",
			"preLaunchTask": "build slangrc"
		},
		{
			"name": "vulkanbox linux",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceFolder}/build/bin/vulkanbox",
			// "args": [
			// 	"--validate"
			// ],
			"stopAtEntry": false,
			"cwd": "${workspaceFolder}/build/bin/",
			"environment": [],
			"preLaunchTask": "build"
		},
		{
			"name": "attach",
			"type": "cppvsdbg",
			"request": "attach",
			"processId": "${command:pickProcess}"
		}
	]
}